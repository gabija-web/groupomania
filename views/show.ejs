<div class="card mt-4">
  <div class="card-body">
  <h1 class="mb-2 mt-2"><%= article.title %></h1>
  <div class="text-muted mb-2 inline">
    <%= article.createdAt.toLocaleDateString() %>
  </div>
  <style type="text/css">
     .btn-secondary { background: #bb8e5a !important; }
 </style>
    <a href="/dashboard" class="btn btn-secondary">All Articles</a>
    <p class="mb-15"></p>
  <div>
    <%- article.sanitizedHtml %>
  </div>
  </div>
</div>
<div class="card mt-4">
  <div class="card-body">
    <div class="form-group">
      <h1 class="mt-4"><i class="far fa-comments mr-2"></i>Comments</h1>
      <textarea required name="comment" id="comment" class="form-control"><%= comment %></textarea>
    </div>
    <div>
      <form action="/dashboard" method="POST"></form>
      <button type="submit" class="btn btn-primary">Comment</button>
    </div>
  </div>
</div>
